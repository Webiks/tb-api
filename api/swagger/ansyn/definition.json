{
	"definitions":{
		"Success": {
			"required": ["message"],
			"properties": {
				"message": {
					"type": "string"
				}
			}
		},
		"ErrorResponse": {
			"required": ["message"],
			"properties": {
				"message": {
					"type": "string"
				}
			}
		},
		"FetchLayers": {
			"description": "fetch by worldName, geometry and dates",
			"type": "object",
			"required": [
				"worldName",
				"geometry",
				"dates"
			],
			"properties": {
				"worldName": {
					"description": "The id of world",
					"type": "string"
				},
				"geometry": {
					"description": "Geometry object ('Feature'/'CollectionFeature'...)",
					"type": "object",
					"required": [
						"type",
						"coordinates"
					],
					"properties": {
						"type": {
							"description": "the geometry type ('Feature'/'Polygon'...)",
							"type": "string"
						},
						"coordinates": {
							"description": "the coordinate of the bbox",
							"type": "array",
							"items": {
								"type": "array",
								"items": {
									"type": "array",
									"items": {
										"type": "number",
										"minItems": 2,
										"maxItems": 2
									}
								}
							}
						}

					}
				},
				"dates": {
					"description": "Start & end dates",
					"type": "object",
					"required": [
						"start",
						"end"
					],
					"properties": {
						"start": {
							"description": "start date",
							"type": "string"
						},
						"end": {
							"description": "end date",
							"type": "string"
						}
					}
				}
			}
		},
		"FetchSuccess": {
			"required": ["layers"],
			"properties": {
				"layers": {
					"type": "array",
					"items": { "type": "object" }
				}
			}
		}
	}
